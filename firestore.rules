
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to read and write their own employee data
    match /employees/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admins can read all employee data
    match /employees/{userId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
